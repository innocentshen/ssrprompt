# Server Configuration
NODE_ENV=development
PORT=3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/ssrprompt?schema=public

# Security
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
ENCRYPTION_KEY=your-64-character-hex-string-for-aes-256-encryption

# Generate ENCRYPTION_KEY with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Demo Mode
DEMO_TOKEN_EXPIRY=7d

# File Storage (S3 compatible, e.g. MinIO; optional but required for file upload/attachments)
S3_ENDPOINT=https://jpminio.zeabur.app
S3_BUCKET=zeabur
S3_ACCESS_KEY_ID=your-minio-access-key
S3_SECRET_ACCESS_KEY=your-minio-secret-key
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Registration Control
ALLOW_REGISTRATION=true

# Email Verification (optional)
# If enabled, registration must include a verification code sent via SMTP.
REQUIRE_EMAIL_VERIFICATION=true

# SMTP (required when REQUIRE_EMAIL_VERIFICATION=true)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM="SSRPrompt <noreply@example.com>"

# OAuth (optional)
OAUTH_GOOGLE_ENABLED=true
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/oauth/google/callback

OAUTH_LINUXDO_ENABLED=true
OAUTH_LINUXDO_CLIENT_ID=
OAUTH_LINUXDO_CLIENT_SECRET=
OAUTH_LINUXDO_CALLBACK_URL=http://localhost:3001/api/v1/auth/oauth/linuxdo/callback
